<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--  Linear layout Menu icone-->
    <include
        android:id="@+id/menu_ami"
        layout="@layout/menu_ami"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!-- Fin menu Icone -->


    <!-- Fin menu Icone -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rechercher une personne:"/>
    <EditText
        android:id="@+id/editTextRechercherAmi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez un pseudo ou un email..."
        />
    <Button
        android:id="@+id/boutonRechercherAmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechercher"/>



    <ListView
        android:id="@+id/listeAjouterAmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#000000" >
    </ListView>
</LinearLayout>