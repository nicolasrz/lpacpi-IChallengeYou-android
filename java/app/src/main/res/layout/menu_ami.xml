<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--  Linear layout Menu icone-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        >

        <ImageView
            android:layout_width="111dp"
            android:layout_height="88dp"
            android:src="@mipmap/listeami128"
            android:id="@+id/menuListeDesAmis"/>

        <ImageView
            android:layout_width="111dp"
            android:layout_height="88dp"
            android:src="@mipmap/ajoutami128"
            android:id="@+id/menuAjouterAmi"/>
        <ImageView
            android:layout_width="111dp"
            android:layout_height="88dp"
            android:src="@mipmap/invitami128"
            android:id="@+id/menuInvitationRecu"
            android:layout_weight="0.37" />


    </LinearLayout>
    <!-- Fin menu Icone -->

</LinearLayout>